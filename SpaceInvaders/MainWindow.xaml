<Window x:Class="SpaceInvaders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceInvaders"
        mc:Ignorable="d"
        KeyDown="OnTextInputKeyDown"
        Title="MainWindow" Height="650" Width="800">
       
    <Grid x:Name="Root" KeyDown="OnTextInputKeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Grid.Row="1" Text="{Binding playerlife, ElementName=playerlife}"/>
        <TextBlock x:Name="Koniec" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Text="Koniec rundy"/>

    </Grid>


</Window>
